{
  "compilerOptions": {
    "target": "es6",
    "module": "es2020",
    "rootDir": "./",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "routes/**/*"],
  "exclude": ["node_modules"]
}
